{
	"compilerOptions":
	{
		//-------//
		//       //
		// ALIAS //
		//       //
		//-------//
		"paths":
		{
			"@": ["./src"],
			"@/*": ["./src/*"],
		},
		//------//
		//      //
		// CORE //
		//      //
		//------//
		"jsx": "react-jsx", "target": "esnext", "module": "esnext", "baseUrl": "./",
		//------//
		//      //
		// MISC //
		//      //
		//------//
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDeclarationOnly": true,
	},
	"exclude": ["node_modules"],
}
