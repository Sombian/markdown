{
	"compilerOptions":
	{
		"paths":
		{
			"@": ["./src"],
			"@/*": ["./src/*"]
		},
		//------//
		//      //
		// CORE //
		//      //
		//------//
		"jsx": "react-jsx", "target": "esnext", "module": "esnext", "baseUrl": "./",
		//------//
		//      //
		// MISC //
		//      //
		//------//
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDeclarationOnly": true,
		"verbatimModuleSyntax": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "./out"]
}
